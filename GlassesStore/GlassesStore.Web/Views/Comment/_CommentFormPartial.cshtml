@model CommentFormViewModel

<form method="post">
    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
    <input type="hidden" asp-for="@Model.UserId" value="@Model.UserId" />
    <input type="hidden" asp-for="@Model.GlassesId" value="@Model.GlassesId" />
    <div class="form-group">
        <textarea asp-for="@Model.Content" class="form-control" rows="10" placeholder="Enter text.."></textarea>
        <span asp-validation-for="@Model.Content" class="small text-danger"></span>
    </div>
    <input class="btn btn-primary mt-3" type="submit" value="Submit" />
</form>