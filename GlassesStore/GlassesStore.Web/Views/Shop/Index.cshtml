@model GlassesListingViewModel
@{
    ViewData["Title"] = "Shop Index";
}
<div class="mb-2">
    <form class="form-inline">
        <div class="form-group col-auto">
            <input asp-for="SearchTerm">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>
<partial name="_GlassesListingPartial" model="@Model.Glasses" />

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalGlasses / GlassesListingViewModel.GlassesPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Shop"
           asp-action="Index"
           asp-route-currentPage="@previousPage"
           asp-route-searchTerm="@Model.SearchTerm"><<</a>
    </div>
    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                     !Model.Glasses.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Shop"
           asp-action="Index"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm">>></a>
    </div>
</div>

