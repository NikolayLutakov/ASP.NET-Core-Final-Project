@model IEnumerable<PurchaseServiceModel>

@{
    ViewData["Title"] = "My Purchases";
}

@{
    var rowNumber = 1;
}

<h2 class="text-center text-primary">@ViewData["Title"]</h2>

<div class="mb-3">
    <a class="btn btn-light" asp-area="" asp-controller="Shop" asp-action="Index">Back</a>
</div>

@if (!Model.Any())
{
    <h2 class="text-center">You don't have purchases yet.</h2>
}
else
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Date</th>
                <th scope="col">Card Number</th>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchase in Model)
            {
                <tr>
                    <th scope="row">@rowNumber</th>
                    <td>@purchase.Date</td>
                    <td>@purchase.Card</td>
                    <td>@purchase.Glasses</td>
                    <td>@purchase.Price</td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
}

