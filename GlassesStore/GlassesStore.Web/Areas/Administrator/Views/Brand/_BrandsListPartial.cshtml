@model IEnumerable<BrandServiceModel>

<div class="col-12 row">
    @foreach (var brand in Model)
    {
        <div class="card col-4" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@brand.Name</h5>
                <p class="card-text">@brand.Description</p>
            </div>
            <div class="card-text mb-2 ml-3">
                <a asp-controller="Brand" asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-primary">Edit</a>
                @if (!brand.HasGlasses)
                {
                    <a asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-danger">Delete</a>
                }
            </div>
        </div>
    }
</div>